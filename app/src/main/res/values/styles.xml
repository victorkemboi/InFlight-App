<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>


    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <style name="ProgressBarStylePrimary">
        <item name="colorAccent">@color/colorPrimaryDark</item>
    </style>

    <style name="Title" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/grey_10</item>
        <item name="android:textStyle">normal</item>
        <item name="textAllCaps">true</item>
        <item name="android:textSize">18sp</item>

    </style>
    <style name="Title.small" parent="Title">
        <item name="android:textColor">@color/grey_10</item>
        <item name="android:textStyle">normal</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>
    <style name="Title.large" parent="Title">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textStyle">normal</item>
        <item name="textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="Title.small.bold" parent="Title.small">
        <item name="android:textColor">@color/grey_10</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>

    </style>

    <style name="Title.HomeBtn" parent="Title">
        <item name="android:textColor">@color/grey_60</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="Title.item" parent="Title.HomeBtn">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">normal</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">11sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>

    </style>

    <style name="Title.item.light" parent="Title.item">
        <item name="android:textColor">@color/grey_90</item>
        <item name="android:textStyle">normal</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">11sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>

    </style>
    <style name="Title.small.button" parent="Title.small">
        <item name="android:textSize">14sp</item>
    </style>
    <style name="Title.Bold" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/grey_10</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name = "NoActionBar" parent = "Theme.AppCompat.Light.NoActionBar">
        <item name = "android:windowActionBar">false</item>
        <item name = "android:windowNoTitle">true</item>
    </style>

    <style name="GlideSliderCardStyle" parent="Base.CardView">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="cardBackgroundColor">@android:color/transparent</item>
        <item name="cardElevation">0dp</item>

    </style>

    <style name="GlideSliderBackgroundStyle">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="AppTheme.ActionBar.Transparent" parent="AppTheme">
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="colorPrimary">@android:color/transparent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />


</resources>