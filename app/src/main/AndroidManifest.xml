<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mes.inflight_mag">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.main.view.IssueDetail"/>
        <activity android:name=".ui.main.view.Issues" />
        <activity android:name=".ui.main.view.Magazines" />
        <activity android:name=".ui.main.view.Home" />
        <activity android:name=".ui.main.view.SignUp" />
        <activity android:name=".ui.main.view.SignIn" />
        <activity
            android:name=".ui.main.view.SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.main.view.MainActivity" />
    </application>

</manifest>